<?xml version="1.0"?>
<root>
  <!-- 
    Keyremap settings for Karabiner
    @see https://pqrs.org/osx/karabiner/index.html
   -->
  <appdef>
    <appname>SKETCH3</appname>
    <equal>com.bohemiancoding.sketch3</equal>
  </appdef>
  <item>
    <name>Space( ␣ ) + H | J | K | L to Left/Down/Up/Right</name>
    <appendix>カーソルを移動 - 上下左右</appendix>
    <identifier>ogaclejapan.remap_vimode_like_hjkl</identifier>
    <not>SKETCH3</not>
    <autogen>
      __KeyOverlaidModifier__
      KeyCode::SPACE,
      KeyCode::VK_MODIFIER_EXTRA1,
      KeyCode::SPACE
    </autogen>
    <autogen>
      __KeyToKey__
      KeyCode::H, ModifierFlag::EXTRA1, 
      KeyCode::CURSOR_LEFT
    </autogen>
    <autogen>
      __KeyToKey__
      KeyCode::J, ModifierFlag::EXTRA1,
      KeyCode::CURSOR_DOWN
    </autogen>
    <autogen>
      __KeyToKey__
      KeyCode::K, ModifierFlag::EXTRA1,
      KeyCode::CURSOR_UP
    </autogen>
    <autogen>
      __KeyToKey__
      KeyCode::L, ModifierFlag::EXTRA1,
      KeyCode::CURSOR_RIGHT
    </autogen>
  </item>

  <item>
    <name>Space( ␣ ) + U | N to PageUp/PageDown</name>
    <appendix>カーソルを移動 - ページ上下</appendix>
    <identifier>ogaclejapan.remap_vimode_like_bf</identifier>
    <not>SKETCH3</not>
    <autogen>
      __KeyOverlaidModifier__
      KeyCode::SPACE,
      KeyCode::VK_MODIFIER_EXTRA1,
      KeyCode::SPACE
    </autogen>
    <autogen>
      __KeyToKey__
      KeyCode::U, ModifierFlag::EXTRA1, 
      KeyCode::CURSOR_UP, ModifierFlag::FN
    </autogen>
    <autogen>
      __KeyToKey__
      KeyCode::N, ModifierFlag::EXTRA1,
      KeyCode::CURSOR_DOWN, ModifierFlag::FN
    </autogen>
  </item>
  <item>
    <name>Space( ␣ ) + Dot( . ) | Comma( , ) to Line Head/Tail</name>
    <appendix>カーソルを移動 - 行頭／行末</appendix>
    <identifier>ogaclejapan.remap_vimode_like_0doller</identifier>
    <not>SKETCH3</not>
    <autogen>
      __KeyOverlaidModifier__
      KeyCode::SPACE,
      KeyCode::VK_MODIFIER_EXTRA1,
      KeyCode::SPACE
    </autogen>
    <autogen>
      __KeyToKey__
      KeyCode::COMMA, ModifierFlag::EXTRA1,
      KeyCode::CURSOR_LEFT, ModifierFlag::COMMAND_L
    </autogen>
    <autogen>
      __KeyToKey__
      KeyCode::DOT, ModifierFlag::EXTRA1, 
      KeyCode::CURSOR_RIGHT, ModifierFlag::COMMAND_L
    </autogen>
  </item>
  <item>
    <name>Space( ␣ ) + I | O to Word Prev/Next</name>
    <appendix>カーソルを移動 - 前の単語／次の単語</appendix>
    <identifier>ogaclejapan.remap_vimode_like_bw</identifier>
    <not>SKETCH3</not>
    <autogen>
      __KeyOverlaidModifier__
      KeyCode::SPACE,
      KeyCode::VK_MODIFIER_EXTRA1,
      KeyCode::SPACE
    </autogen>
    <autogen>
      __KeyToKey__
      KeyCode::I, ModifierFlag::EXTRA1, 
      KeyCode::CURSOR_LEFT, ModifierFlag::OPTION_L
    </autogen>
    <autogen>
      __KeyToKey__
      KeyCode::O, ModifierFlag::EXTRA1, 
      KeyCode::CURSOR_RIGHT, ModifierFlag::OPTION_L
    </autogen>
  </item>
  <item>
    <name>Space( ␣ ) + 1..9 | 0 | Minus( - ) | Equal( = ) to F1..F12</name>
    <appendix>ショートカット - F1〜F12補完</appendix>
    <identifier>ogaclejapan.remap_number_function_keys</identifier>
    <not>SKETCH3</not>
    <autogen>
      __KeyOverlaidModifier__
      KeyCode::SPACE,
      KeyCode::VK_MODIFIER_EXTRA1,
      KeyCode::SPACE
    </autogen>
    <autogen>
      __KeyToKey__
      KeyCode::KEY_1, ModifierFlag::EXTRA1,
      KeyCode::F1
    </autogen>
    <autogen>
      __KeyToKey__
      KeyCode::KEY_2, ModifierFlag::EXTRA1, 
      KeyCode::F2
    </autogen>
    <autogen>
      __KeyToKey__
      KeyCode::KEY_3, ModifierFlag::EXTRA1,
      KeyCode::F3
    </autogen>
    <autogen>
      __KeyToKey__
      KeyCode::KEY_4, ModifierFlag::EXTRA1, 
      KeyCode::F4
    </autogen>
    <autogen>
      __KeyToKey__
      KeyCode::KEY_5, ModifierFlag::EXTRA1,
      KeyCode::F5
    </autogen>
    <autogen>
      __KeyToKey__
      KeyCode::KEY_6, ModifierFlag::EXTRA1,
      KeyCode::F6
    </autogen>
    <autogen>
      __KeyToKey__
      KeyCode::KEY_7, ModifierFlag::EXTRA1,
      KeyCode::F7
    </autogen>
    <autogen>
      __KeyToKey__
      KeyCode::KEY_8, ModifierFlag::EXTRA1, 
      KeyCode::F8
    </autogen>
    <autogen>
      __KeyToKey__
      KeyCode::KEY_9, ModifierFlag::EXTRA1,
      KeyCode::F9
    </autogen>
    <autogen>
      __KeyToKey__
      KeyCode::KEY_0, ModifierFlag::EXTRA1, 
      KeyCode::F10
    </autogen>
    <autogen>
      __KeyToKey__
      KeyCode::MINUS, ModifierFlag::EXTRA1, 
      KeyCode::F11
    </autogen>
    <autogen>
      __KeyToKey__
      KeyCode::EQUAL, ModifierFlag::EXTRA1, 
      KeyCode::F12
    </autogen>
  </item>
  <item>
    <name>Space( ␣ ) + M to Change Input Method</name>
    <appendix>ショートカット - IME入力切替</appendix>
